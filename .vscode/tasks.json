    "version": "2.0.0",
    "tasks": [
        {
            "label": "build app",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "sw/workspace/app/Debug",
                "all"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean app",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "sw/workspace/app/Debug",
                "clean"
            ],
            "problemMatcher": []
        }        
    ]
}